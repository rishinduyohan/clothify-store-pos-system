<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="250.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 2);" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-cursor: hand;" GridPane.columnIndex="0">
            <children>
                <ImageView fx:id="image" fitHeight="163.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true">
                    <VBox.margin>
                        <Insets bottom="15.0" top="15.0" />
                    </VBox.margin>
                </ImageView>
                <VBox spacing="5.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="5.0" />
                    </padding>
                    <children>
                        <Label fx:id="txtProductName" style="-fx-font-weight: bold; -fx-font-size: 16;" text="Slim Fit Jeans" textFill="#2d3447" />
                        <Label fx:id="txtProductDescription" text="Men's Bottoms" textFill="#a2a6b6">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label fx:id="txtPrice" style="-fx-font-weight: bold; -fx-font-size: 18;" text="\$45.00" textFill="#4b7bec" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="btnAddToCart" onAction="#btnAddToCartOnAction" style="-fx-background-color: #eef2fa; -fx-text-fill: #4b7bec; -fx-background-radius: 8; -fx-font-weight: bold; -fx-cursor: hand;" text="Add to Cart" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>

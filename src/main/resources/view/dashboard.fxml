<AnchorPane fx:id="mainContent" prefHeight="800.0" prefWidth="1520.0" style="-fx-background-color: #F8FAFC;" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.clothify.controller.DashboardController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <left>
                <VBox prefWidth="260.0" style="-fx-background-color: #0F172A;" BorderPane.alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="12.0">
                            <padding><Insets left="25.0" /></padding>
                            <children>
                                <Circle fill="#3B82F6" radius="10.0" />
                                <Label text="CLOTHIFY" textFill="WHITE">
                                    <font><Font name="Segoe UI Bold" size="24.0" /></font>
                                </Label>
                            </children>
                        </HBox>
                        <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Button fx:id="btnDashboard" alignment="BASELINE_LEFT" onAction="#btnDashboardOnAction" prefHeight="50.0" prefWidth="260.0" styleClass="side-button-active" text="Dashboard" />
                                <Button fx:id="btnPos" alignment="BASELINE_LEFT" onAction="#btnPosOnAction" prefHeight="50.0" prefWidth="260.0" styleClass="side-button" text="Point of Sale" />
                                <Button fx:id="btnEmployee" alignment="BASELINE_LEFT" onAction="#btnEmployeeOnAction" prefHeight="50.0" prefWidth="260.0" styleClass="side-button" text="Employees" />
                                <Button fx:id="btnInventory" alignment="BASELINE_LEFT" onAction="#btnInventoryOnAction" prefHeight="50.0" prefWidth="260.0" styleClass="side-button" text="Inventory" />
                                <Button fx:id="btnSupplier" alignment="BASELINE_LEFT" onAction="#btnSupplierOnAction" prefHeight="50.0" prefWidth="260.0" styleClass="side-button" text="Suppliers" />
                                <Button fx:id="btnReports" alignment="BASELINE_LEFT" onAction="#btnReportsOnAction" prefHeight="50.0" prefWidth="260.0" styleClass="side-button" text="Reports" />
                            </children>
                        </VBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="15.0" style="-fx-background-color: #1E293B;">
                            <padding><Insets left="20.0" /></padding>
                            <children>
                                <Circle fx:id="imgUserProfile" fill="#64748B" radius="20.0" />
                                <VBox alignment="CENTER_LEFT">
                                    <children>
                                        <Label fx:id="lblUserName" prefHeight="19.0" prefWidth="122.0" text="Rishindu Peeris" textFill="WHITE"><font><Font name="System Bold" size="13.0" /></font></Label>
                                        <Label fx:id="lblUserRole" text="Administrator" textFill="#94A3B8"><font><Font size="11.0" /></font></Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </left>

            <center>
                <AnchorPane fx:id="middleContent">
                    <children>
                        <ScrollPane fitToWidth="true" styleClass="main-scroll-pane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <content>
                                <VBox spacing="30.0">
                                    <padding><Insets bottom="40.0" left="40.0" right="40.0" top="40.0" /></padding>
                                    <children>
                                        <VBox>
                                            <children>
                                                <Label text="Overview" textFill="#1E293B"><font><Font name="System Bold" size="32.0" /></font></Label>
                                                <Label fx:id="lblDate" text="Thursday, 2 Jan 2026 | 09:21 PM" textFill="#64748B" />
                                            </children>
                                        </VBox>

                                        <HBox spacing="25.0">
                                            <children>
                                                <VBox prefHeight="130.0" styleClass="kpi-card" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="TOTAL REVENUE" textFill="#64748B"><font><Font name="System Bold" size="12.0" /></font></Label>
                                                        <Label fx:id="lblTotalRevenue" text="LKR 0.00" textFill="#0F172A"><font><Font name="System Bold" size="28.0" /></font></Label>
                                                        <Label text="â†‘ 12% from last month" textFill="#10B981" />
                                                    </children>
                                                </VBox>
                                                <VBox prefHeight="130.0" styleClass="kpi-card" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="ACTIVE ORDERS" textFill="#64748B"><font><Font name="System Bold" size="12.0" /></font></Label>
                                                        <Label fx:id="lblActiveOrders" text="0" textFill="#0F172A"><font><Font name="System Bold" size="28.0" /></font></Label>
                                                        <Label text="Ready for dispatch" textFill="#3B82F6" />
                                                    </children>
                                                </VBox>
                                                <VBox prefHeight="130.0" styleClass="kpi-card" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="TOTAL CUSTOMERS" textFill="#64748B"><font><Font name="System Bold" size="12.0" /></font></Label>
                                                        <Label fx:id="lblTotalCustomers" text="0" textFill="#0F172A"><font><Font name="System Bold" size="28.0" /></font></Label>
                                                        <Label text="+24 new this week" textFill="#8B5CF6" />
                                                    </children>
                                                </VBox>
                                                <VBox prefHeight="130.0" styleClass="kpi-card" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="ITEMS SOLD" textFill="#64748B"><font><Font name="System Bold" size="12.0" /></font></Label>
                                                        <Label fx:id="lblItemsSold" text="0" textFill="#0F172A"><font><Font name="System Bold" size="28.0" /></font></Label>
                                                        <Label text="Stock status: Good" textFill="#F59E0B" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>

                                        <HBox spacing="30.0">
                                            <children>
                                                <VBox styleClass="content-card" HBox.hgrow="ALWAYS">
                                                    <children>
                                                        <Label text="Revenue Analytics" textFill="#1E293B"><font><Font name="System Bold" size="18.0" /></font></Label>
                                                        <BarChart fx:id="revenueChart" prefHeight="350.0" styleClass="modern-chart">
                                                            <xAxis><CategoryAxis side="BOTTOM" /></xAxis>
                                                            <yAxis><NumberAxis side="LEFT" /></yAxis>
                                                        </BarChart>
                                                    </children>
                                                </VBox>
                                                <VBox prefWidth="350.0" spacing="20.0">
                                                    <children>
                                                        <VBox styleClass="content-card">
                                                            <children>
                                                                <Label text="Monthly Target" textFill="#1E293B"><font><Font name="System Bold" size="16.0" /></font></Label>
                                                                <ProgressBar fx:id="progressMonthlyGoal" maxWidth="1.7976931348623157E308" progress="0.75" />
                                                                <HBox>
                                                                    <children>
                                                                        <Label fx:id="lblMonthlyGoalValue" text="LKR 1.2M" textFill="#3B82F6" />
                                                                        <Region HBox.hgrow="ALWAYS" />
                                                                        <Label fx:id="lblMonthlyGoalPercent" text="75%" />
                                                                    </children>
                                                                </HBox>
                                                            </children>
                                                        </VBox>
                                                        <VBox styleClass="content-card" VBox.vgrow="ALWAYS">
                                                            <children>
                                                                <HBox alignment="CENTER_LEFT">
                                                                    <children>
                                                                        <Label text="Active Cashiers" textFill="#1E293B"><font><Font name="System Bold" size="16.0" /></font></Label>
                                                                        <Region HBox.hgrow="ALWAYS" />
                                                                        <Circle fx:id="notifIndicator" fill="#10B981" radius="5.0" />
                                                                    </children>
                                                                </HBox>
                                                                <VBox fx:id="vboxCashiers" spacing="10.0" />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </HBox>

                                        <VBox styleClass="content-card">
                                            <children>
                                                <HBox alignment="CENTER_LEFT">
                                                    <children>
                                                        <Label text="Recent Transactions" textFill="#1E293B"><font><Font name="System Bold" size="18.0" /></font></Label>
                                                        <Region HBox.hgrow="ALWAYS" />
                                                        <Button fx:id="btnViewAllOrders" onAction="#btnViewAllOrdersOnAction" styleClass="text-button" text="View All" />
                                                    </children>
                                                </HBox>
                                                <TableView fx:id="tblRecentOrders" prefHeight="250.0" styleClass="modern-table">
                                                    <columns>
                                                        <TableColumn fx:id="colOrderId" text="ID" />
                                                        <TableColumn fx:id="colCustomer" text="Customer" />
                                                        <TableColumn fx:id="colDate" text="Date" />
                                                        <TableColumn fx:id="colAmount" text="Amount" />
                                                        <TableColumn fx:id="colStatus" text="Status" />
                                                    </columns>
                                                    <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                                                </TableView>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>

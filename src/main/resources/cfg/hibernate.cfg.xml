<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost/clothify_store?createDatabaseIfNotExist=true</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">1234</property>

        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">true</property>

        <mapping class="edu.icet.clothify.model.entity.Product"/>
        <mapping class="edu.icet.clothify.model.entity.Category"/>
        <mapping class="edu.icet.clothify.model.entity.Supplier"/>
        <mapping class="edu.icet.clothify.model.entity.Order"/>
        <mapping class="edu.icet.clothify.model.entity.OrderDetail"/>
        <mapping class="edu.icet.clothify.model.entity.Employee"/>
        <mapping class="edu.icet.clothify.model.entity.User"/>

    </session-factory>
</hibernate-configuration>